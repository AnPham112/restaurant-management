{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:@tanstack/eslint-plugin-query/recommended",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "globals": {
    "RequestInit": true,
    "React": "readonly"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prettier/prettier": [
      "warn",
      {
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always",
        "printWidth": 80,
        "endOfLine": "auto"
      }
    ]
  }
}
